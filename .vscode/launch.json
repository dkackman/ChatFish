    "version": "0.2.0",
    "configurations": [
        {
            "name": "Client",
            "type": "blazorwasm",
            "request": "launch",
            "hosted": false,
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/ChatFish/bin/Debug/net8.0/ChatFish.dll",
            "cwd": "${workspaceFolder}/ChatFish",
            "browser": "edge",
            "url": "http://localhost:5139",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Service",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/ChatService",
            "program": "${workspaceFolder}/ChatService/main.py",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/venv/Scripts/python"
            },
            "args": [],
            "console": "integratedTerminal"
        },
        {
            "name": "Launch and Debug Standalone Blazor WebAssembly App",
            "type": "blazorwasm",
            "request": "launch",
            "cwd": "${workspaceFolder}/ChatFish"
        }
    ]
}